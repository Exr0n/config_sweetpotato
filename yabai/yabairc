LAYOUT_SCRIPT="$HOME/.config/yabai/apply-default-layouts.sh"
yabai -m signal --add event=display_added action="$LAYOUT_SCRIPT"
yabai -m signal --add event=display_removed action="$LAYOUT_SCRIPT"
yabai -m signal --add event=display_moved action="$LAYOUT_SCRIPT"
yabai -m signal --add event=display_resized action="$LAYOUT_SCRIPT"
yabai -m signal --add event=space_changed action="$LAYOUT_SCRIPT"
bash "$LAYOUT_SCRIPT"
